{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://127.0.0.1:8081/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 8081,
      "request": "attach",
      "type": "pwa-chrome",
      "url": "http://127.0.0.1:8081/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://127.0.0.1:8081/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Firefox",
      "type": "firefox",
      "request": "attach",
      "url": "http://127.0.0.1:8081/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Firefox",
      "url": "http://127.0.0.1:8081/",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Edge",
      "request": "attach",
      "type": "pwa-msedge",
      "url": "http://127.0.0.1:8081/",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
